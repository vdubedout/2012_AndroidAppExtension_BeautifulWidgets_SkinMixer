<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/skinpreview_stripebackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/skinpreview_background"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:src="@drawable/default_background" />

    <View
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/skinpreview_foreground"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/center"
        android:layout_alignTop="@+id/skinpreview_background"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-8dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/default_foreground" />

    <LinearLayout
        android:id="@+id/skinpreview_linear_numbers"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/skinpreview_foreground"
        android:layout_alignLeft="@+id/skinpreview_foreground"
        android:layout_alignRight="@+id/skinpreview_foreground"
        android:layout_alignTop="@+id/skinpreview_foreground"
        android:orientation="horizontal"
        android:padding="12dp" >

        <ImageView
            android:id="@+id/skinpreview_hours_tens"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="45" />

        <ImageView
            android:id="@+id/skinpreview_hours_unit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="45" />

        <ImageView
            android:id="@+id/skinpreview_dots"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="20" />

        <ImageView
            android:id="@+id/skinpreview_minutes_tens"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="45" />

        <ImageView
            android:id="@+id/skinpreview_minutes_unit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="45" />
    </LinearLayout>

    <ImageView
         android:layout_alignBottom="@+id/skinpreview_linear_numbers"
         android:layout_alignLeft="@+id/skinpreview_linear_numbers"
         android:layout_width="18dp"
         android:layout_height="wrap_content"
         android:layout_marginLeft="3dp"
         android:layout_marginBottom="3dp" />

</RelativeLayout>