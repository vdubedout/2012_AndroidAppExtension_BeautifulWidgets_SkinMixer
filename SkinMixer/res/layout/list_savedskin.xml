<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/view_background_3"
    android:padding="20dp" >

    <include
        android:id="@+id/list_savedskin_display_background"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/skinmixer_tv_background"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        layout="@layout/view_displaylike" />

    <ImageView
        android:id="@+id/list_savedskin_iv_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/list_savedskin_display_background"
        android:layout_alignLeft="@+id/list_savedskin_display_background"
        android:layout_alignRight="@+id/list_savedskin_display_background"
        android:layout_alignTop="@+id/list_savedskin_display_background"
        android:layout_centerInParent="true"
        android:layout_margin="27dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/list_savedskin_labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_savedskin_display_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/list_savedskin_skinname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="" />

        <TextView
            android:id="@+id/list_savedskin_skincreationdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="" />
    </LinearLayout>

    <LinearLayout
         android:layout_below="@+id/list_savedskin_labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/list_savedskin_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/savedskins_button_delete" />

        <Button
            android:id="@+id/list_savedskin_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/savedskins_button_modify" />
        <!-- Add share -->

    </LinearLayout>
</RelativeLayout>