<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/custompreview" />

    <Button
        android:id="@+id/btn_validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/preview"
        android:text="validate" />

    <EditText
        android:id="@+id/skinName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/preview"
        android:layout_toLeftOf="@+id/btn_validate"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_validate"
        android:orientation="vertical"
        android:weightSum="1" >

        <RelativeLayout
            android:id="@+id/skinmixer_backgroundlabel_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@android:color/darker_gray" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Background"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/skinmixer_backgroundlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="TotoBackground"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <fragment
            android:id="@+id/skinmixer_fragment_background"
            android:name="com.andexp.skinmixer.fragment.FragmentSkinPartList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            tools:layout="@layout/list_oneimage_skinpart" />

        <RelativeLayout
            android:id="@+id/skinmixer_backgroundnumberslabel_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@android:color/darker_gray" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Background Numbers"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/skinmixer_backgroundnumberslabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="TotoBackground"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <fragment
            android:id="@+id/skinmixer_fragment_backgroundnumbers"
            android:name="com.andexp.skinmixer.fragment.FragmentSkinPartList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            tools:layout="@layout/list_oneimage_skinpart" />

        <RelativeLayout
            android:id="@+id/skinmixer_numberslabel_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@android:color/darker_gray" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Numbers"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/skinmixer_numberslabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="TotoBackground"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <fragment
            android:id="@+id/skinmixer_fragment_numbers"
            android:name="com.andexp.skinmixer.fragment.FragmentSkinPartList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            tools:layout="@layout/list_oneimage_skinpart" />
    </LinearLayout>

</RelativeLayout>